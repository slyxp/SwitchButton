<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/auto_sync_tips"/>


    <View
        style="@style/split_line"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
      />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone">

        <Switch
            android:id="@+id/account_manage_apps_sw"
            style="@style/setting_switch" />

        <ImageView
            android:id="@+id/account_manager_apps_im_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/settings_ic_apps" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/account_manager_apps_im_iv"
            android:layout_toRightOf="@id/account_manager_apps_im_iv"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="18dp"
            android:paddingRight="0dp"
            android:paddingStart="18dp" >

            <TextView
                style="@style/text_one"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/apps" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp" >

        <ImageView
            android:id="@+id/account_manager_contact_im_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/settings_ic_contacts" />

        <TextView
            style="@style/text_one"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:maxLines="2"
            android:text="@string/contact" />

        <Switch
            android:id="@+id/account_manage_contact_sw"
            style="@style/setting_switch"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <View
        style="@style/split_line"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/account_manager_callrecoder_im_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/settings_ic_call_logs" >
        </ImageView>

        <TextView
            style="@style/text_one"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:maxLines="2"
            android:text="@string/call_log"

            />

        <Switch
            android:id="@+id/account_manage_callrecoder_sw"
            style="@style/setting_switch"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <View
        style="@style/split_line"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp" >

        <ImageView
            android:id="@+id/account_manager_sms_im_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/settings_ic_sms" />

        <TextView
            style="@style/text_one"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:maxLines="2"
            android:text="@string/sms" />

        <Switch
            android:id="@+id/account_manage_sms_sw"
            style="@style/setting_switch"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

    <View
        style="@style/split_line"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="0dp" />

</LinearLayout>
